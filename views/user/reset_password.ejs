<div class="col-lg-4"></div>
<div class="col-lg-4">
    <form class="form-horizontal" action="/user/password/reset/code" method="post">
        <legend>Reset Password</legend>
        <div class="form-group">
            <label for="inputEmail" class="col-lg-3 control-label">Email</label>
            <div class="col-lg-6">
                <input type="email" class="form-control" id="inputEmail" placeholder="Email" name="email">
                <span class="help-block">Send otp to email</span>
            </div>
            <div class="col-lg-3 col-xs-offset-8">
                <button type="submit" class="btn btn-default">Send</button>
            </div>
        </div>
    </form>
    <form class="form-horizontal" action="/user/password/reset" method="post">
        <div class="form-group">
            <label for="inputCode" class="col-lg-3 control-label">Code</label>
            <div class="col-lg-9">
                <input type="text" class="form-control" id="inputCode" placeholder="Code" name="code">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="col-lg-3 control-label">New Password</label>
            <div class="col-lg-9">
                <input type="password" class="form-control" id="inputPassword" placeholder="New Password"
                    name="password">
            </div>
        </div>
        <div class="form-group">
            <label for="inputConfirmPassword" class="col-lg-3 control-label">Confirm Password</label>
            <div class="col-lg-9">
                <input type="password" class="form-control" id="inputConfirmPassword" placeholder="Confirm New Password"
                    name="confirmPassword">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-6">
                <button type="submit" class="btn btn-primary">Reset Password</button>
            </div>
        </div>
    </form>
</div>
<div class="col-lg-4">
    <% if (success != '') { %>
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong><%= success %></strong>
    </div>
    <% } %>
    <% if (error != '') { %>
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>
            <%= error %>
        </strong>
    </div>
    <% } %>
</div>