<div class="col-lg-4"></div>
<div class="col-lg-4">
    <form class="form-horizontal" action="/user/email/verify" method="post">
        <legend>Email Verifier</legend>
        <div class="form-group">
            <label for="inputOtp" class="col-lg-3 control-label">Code</label>
            <div class="col-lg-6">
                <input type="text" class="form-control" id="inputCode" placeholder="Code" name="code">
                <span class="help-block">Send otp to email</span>
            </div>
            <div class="col-lg-3">
                <button type="submit" class="btn btn-primary">Confirm</button>
            </div>
        </div>
    </form>
    <form class="form-horizontal" action="/user/email/verify/code" method="post">
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-3">
                <button type="submit" class="btn btn-default">Send code</button>
            </div>
        </div>
    </form>
</div>
<div class="col-lg-4">
    <% if (success != '') { %>
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong><%= success %></strong>
    </div>
    <% } %>
    <% if (error != '') { %>
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>
            <%= error %>
        </strong>
    </div>
    <% } %>
</div>