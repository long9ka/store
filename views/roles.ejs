<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <form class="form-horizontal" action="/user/roles" method="POST">
            <fieldset>
                <legend>Add Roles (+)</legend>
                <div class="form-group">
                    <label for="inputRole" class="col-lg-4 control-label">Your roles</label>
                    <div class="col-lg-8">
                        <% user.roles.forEach(role => { %>
                        <% if (role === 'guess') { %>
                        <span class="label label-default"><%= role %></span>
                        <% } %>
                        <% if (role === 'staff') { %>
                        <span class="label label-success"><%= role %></span>
                        <% } %>
                        <% if (role === 'manager') { %>
                        <span class="label label-primary"><%= role %></span>
                        <% } %>
                        <% if (role === 'admin') { %>
                        <span class="label label-danger"><%= role %></span>
                        <% } %>
                        <% }) %>
                        <span class="help-block">
                            <% if (user.roles.length > 1) { %>
                            <%= user.roles.length %> Roles
                            <% } else { %>
                            <%= user.roles.length %> Role
                            <% } %>
                        </span>
                    </div>
                </div>
                <% if (!roleReq) { %>
                <% if (user.roles.length != 4) { %>
                <div class="form-group">
                    <label for="select" class="col-lg-4 control-label">Upgrade to</label>
                    <div class="col-lg-8">
                        <select class="form-control" id="select" name="upgradeTo">
                            <% if (!user.roles.includes('guess')) { %>
                            <option>Guess</option>
                            <% } %>
                            <% if (!user.roles.includes('staff')) { %>
                            <option>Staff</option>
                            <% } %>
                            <% if (!user.roles.includes('manager')) { %>
                            <option>Manager</option>
                            <% } %>
                            <% if (!user.roles.includes('admin')) { %>
                            <option>Admin</option>
                            <% } %>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="textArea" class="col-lg-4 control-label">Message</label>
                    <div class="col-lg-8">
                        <textarea class="form-control" rows="3" id="textArea" name="message"
                            style="margin: 0px 113.156px 0px 0px; width: 100%; height: 146px;"></textarea>
                        <span class="help-block">Message is required. About 100 chars</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-8">
                        <button type="submit" class="btn btn-info">Send request</button>
                    </div>
                </div>
                <% } else { %>
                <div class="form-group">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-8">
                        <label for="textArea" class="text-warning control-label">You had 4 roles, full
                            permissions</label>
                    </div>
                </div>
                <% } %>
                <div class="form-group">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-8">
                        You can also <a href="/user/roles/delete" class="text-danger">delete roles</a>
                    </div>
                </div>
                <% } %>
            </fieldset>
        </form>
        <% if (roleReq) { %>
        <form class="form-horizontal" action="/user/roles/confirm" method="POST">
            <fieldset>
                <div class="form-group">
                    <div class="col-lg-12">
                        <% if (roleReq.status == 'pending') { %>
                        <h5 class="text-center text-warning">Your request is still pending...</h5>
                        <% } else if (roleReq.status == 'accepted') { %>
                        <h5 class="text-center text-success">Your request was accepted</h5>
                        <% } else if (roleReq.status == 'declined') { %>
                        <h5 class="text-center text-danger">Your request was declined</h5>
                        <% } %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-8 col-xs-offset-8">
                        <% if (roleReq.status == 'pending') { %>
                        <button type="submit" class="btn btn-default">Cancle</button>
                        <% } else if (roleReq.status == 'accepted') { %>
                        <button type="submit" class="btn btn-success">Confirm</button>
                        <% } else if (roleReq.status == 'declined') { %>
                        <button type="submit" class="btn btn-default">Confirm</button>
                        <% } %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-8">
                        You can also <a href="/user/roles/delete" class="text-danger">delete roles</a>
                    </div>
                </div>
            </fieldset>
        </form>
        <% } %>
    </div>
    <div class="col-lg-4">
        <% if (success != '') { %>
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong><%= success %></strong>
        </div>
        <% } %>
        <% if (error != '') { %>
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>
                <%= error %>
            </strong>
        </div>
        <% } %>
    </div>
</div>