<div class="col-lg-4"></div>
<div class="col-lg-4">
    <form class="form-horizontal" action="/password_reset/verify" method="POST">
        <legend>Reset Password</legend>
        <div class="form-group">
            <label for="inputEmail" class="col-lg-3 control-label">Email</label>
            <div class="col-lg-6">
                <input type="email" class="form-control" id="inputEmail" placeholder="Email" name="email">
                <span class="help-block">Send otp to email</span>
            </div>
            <div class="col-lg-3 col-xs-offset-8">
                <button type="submit" class="btn btn-default">Send</button>
            </div>
        </div>
    </form>
    <form class="form-horizontal" action="/password_reset" method="POST">
        <div class="form-group">
            <label for="inputOtp" class="col-lg-3 control-label">Code</label>
            <div class="col-lg-9">
                <input type="text" class="form-control" id="inputOtp" placeholder="Otp" name="token">
            </div>
        </div>
        <div class="form-group">
            <label for="inputNewPassword" class="col-lg-3 control-label">New Password</label>
            <div class="col-lg-9">
                <input type="password" class="form-control" id="inputNewPassword" placeholder="New Password"
                    name="newPassword">
            </div>
        </div>
        <div class="form-group">
            <label for="inputConfirmPassword" class="col-lg-3 control-label">Confirm Password</label>
            <div class="col-lg-9">
                <input type="password" class="form-control" id="inputConfirmPassword" placeholder="Confirm New Password"
                    name="confirmPassword">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-6">
                <button type="submit" class="btn btn-primary">Reset Password</button>
            </div>
        </div>
    </form>
</div>
<div class="col-lg-4">
    <%- include('partials/alert') %>
</div>