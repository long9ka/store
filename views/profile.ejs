<div class="row ">
    <div class="col-sm-2"></div>

    <div class="col justify-items-center">
        <% if (success != '') { %>
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong><%= success %></strong>
        </div>
        <% } %>
        <%  if(error != '') { %>
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong><%= error %></strong>
        </div>
        <% } %>
        <form class="form-horizontal" action="/user/profile" method="POST">
            <fieldset>
                <legend>My Profile</legend>
                <hr>
                <div class="form-group">
                    <label for="inputFullName" class="control-label">Full Name</label>
                    <input type="text" class="form-control" id="inputFullName" placeholder="Full name" name="fullName"
                        value="<%= profile.fullName %>">
                </div>
                <div class="form-group">
                    <label for="inputEmail" class="col-lg-4 control-label">Email</label>
                    <input type="text" class="form-control" id="inputEmail" placeholder="Email"
                        value="<%= profile.email %>" disabled>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="inputRole" class="control-label">Roles: </label>
                            <% user.roles.forEach(role => { %>
                            <% if (role === 'guest') { %>
                            <span class="label label-default"><%= role %></span>
                            <% } %>
                            <% if (role === 'staff') { %>
                            <span class="label label-success"><%= role %></span>
                            <% } %>
                            <% if (role === 'manager') { %>
                            <span class="label label-primary"><%= role %></span>
                            <% } %>
                            <% if (role === 'admin') { %>
                            <span class="label label-danger"><%= role %></span>
                            <% } %>
                            <% }) %>
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="ml-auto"></div>
                            <div class="help-block ">
                                <p>To grant permission, click this button</p>
                            </div>
                            <div class="text-right">
                                <a href="/user/roles?option=add" class="btn btn-info btn-sm">Grant permission</a>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="form-group">
                    <label for="inputBirthday" class=" control-label">Birthday</label>
                    <input type="date" class="form-control" id="inputBirthday" name="birthday"
                        value="<%= profile.birthday.toISOString().split('T')[0] %>">
                </div>
                <div class="form-group">
                    <div class="row pl-3">
                        <label class="control-label mr-4">Gender:</label>
                        <div class="radio mx-2">
                            <label>
                                <% if (locals.profile.gender == "male") { %>
                                <input type="radio" name="gender" id="optionsRadios1" value="Male" checked>
                                <% } else { %>
                                <input type="radio" name="gender" id="optionsRadios1" value="Male">
                                <% } %>
                                Male
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <% if (locals.profile.gender == "female") { %>
                                <input type="radio" name="gender" id="optionsRadios2" value="Female" checked>
                                <% } else { %>
                                <input type="radio" name="gender" id="optionsRadios2" value="Female">
                                <% } %>
                                Female
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12 col-lg-offset-12 d-flex justify-content-end">
                        <a href="/" class="btn btn-default">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="col-sm-2">
    </div>
</div>